{
  "conditions": [
    {
      "name": "meeting-active",
      "endpoint": "calendar/meeting/active",
      "value": true
    },
    {
      "name": "meeting-inactive",
      "endpoint": "calendar/meeting/active",
      "value": false
    }
  ],
  "displays": [
    {
      "name": "web",
      "services": [
        {
          "name": "time",
          "side-bar": [
            {
              "display": {
                "endpoint": "time",
                "tick": 1000,
                "refresh": 600000,
                "method": "GET",
                "value": ["time"]
              }
            }
          ]
        },
        {
          "name": "calendar",
          "side-bar": [
            {
              "display": {
                "endpoint": "calendar/date",
                "method": "GET",
                "value": ["date"]
              }
            },
            {
              "display": {
                "endpoint": "calendar/month",
                "method": "GET",
                "value": ["month"]
              }
            }
          ],
          "action-bar": [
            {
              "display-if": "meeting-active",
              "display-value": {
                "endpoint": "calendar/meeting/details",
                "method": "GET",
                "value": ["name"]
              }
            },
            {
              "display-if": "meeting-active",
              "display-value": {
                "endpoint": "calendar/meeting/details",
                "method": "GET",
                "value": ["end-time"]
              }
            },
            {
              "display-icon": "calendar/img/add-15.png",
              "display-if": "meeting-active",
              "action": {
                "endpoint": "calendar/meeting",
                "method": "PUT",
                "body": { "add": 15 }
              }
            },
            {
              "display-icon": "calendar/img/end-meeting.png",
              "display-if": "meeting-active",
              "action": {
                "endpoint": "calendar/meeting",
                "method": "PUT",
                "body": { "end": true }
              }
            },
            {
              "display-icon": "calendar/img/start-meeting.png",
              "display-if": "meeting-inactive",
              "action": {
                "endpoint": "calendar/meeting",
                "method": "PUT",
                "body": { "start": true }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "office-door",
      "services": [
        {
          "name": "do-not-disturb",
          "override-condition": "meeting-active"
        },
        {
          "name": "schedule",
          "side-bar": [
            {
              "display": {
                "endpoint": "calendar/meeting/schedule",
                "method": "GET",
                "value": ["start-time"]
              }
            },
            {
              "display": {
                "endpoint": "calendar/meeting/schedule",
                "method": "GET",
                "value": ["start-time"]
              }
            }
          ]
        }
      ]
    }
  ]
}
